# Server Configuration
PORT=5000                       # Port on which the server will run

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/face_recognition_attendance   # MongoDB connection string

# JWT Authentication
JWT_SECRET=FaceRecognition  # Secret key for JWT token generation

# ImageKit Configuration (for storing face images)
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key       # ImageKit public key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key     # ImageKit private key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_endpoint  # ImageKit URL endpoint
