# Environment Variables for Face Recognition Attendance System
# Created by Aayush Vaghela (https://github.com/AAYUSH412)
# Copy this file to .env and update the values

# =====================================
# APPLICATION CONFIGURATION
# =====================================
NODE_ENV=production
PORT=4000
FRONTEND_URL=http://localhost
ADMIN_URL=http://localhost/admin

# =====================================
# DATABASE CONFIGURATION
# =====================================
# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=face_recognition_db
MONGODB_URI=mongodb://admin:your_secure_mongo_password_here@mongodb:27017/face_recognition_db?authSource=admin

# Redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379

# =====================================
# SECURITY CONFIGURATION
# =====================================
# JWT Secret (IMPORTANT: Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-for-security

# Session Secret
SESSION_SECRET=your-session-secret-key-change-this-too

# =====================================
# IMAGEKIT CONFIGURATION
# =====================================
# Get these from your ImageKit.io dashboard
IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# =====================================
# EMAIL CONFIGURATION (Optional)
# =====================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@fras.com
FROM_NAME=Face Recognition Attendance System

# =====================================
# DEVELOPMENT TOOLS
# =====================================
# Mongo Express (Database UI)
MONGOEXPRESS_LOGIN=admin
MONGOEXPRESS_PASSWORD=admin123

# Redis Commander (Redis UI)
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# =====================================
# RATE LIMITING
# =====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# =====================================
# FILE UPLOAD CONFIGURATION
# =====================================
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# =====================================
# FACE RECOGNITION SETTINGS
# =====================================
FACE_CONFIDENCE_THRESHOLD=0.7
MAX_FACE_DISTANCE=0.6
FACE_MATCH_TOLERANCE=0.5

# =====================================
# LOGGING CONFIGURATION
# =====================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# =====================================
# BACKUP CONFIGURATION
# =====================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =====================================
# MONITORING & ANALYTICS
# =====================================
ENABLE_METRICS=true
METRICS_PORT=3001

# =====================================
# CORS CONFIGURATION
# =====================================
CORS_ORIGIN=http://localhost,http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# =====================================
# SSL/TLS CONFIGURATION (Production)
# =====================================
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# =====================================
# ADDITIONAL SECURITY
# =====================================
TRUST_PROXY=false
SECURE_COOKIES=false
COOKIE_DOMAIN=localhost
